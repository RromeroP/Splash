<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cellCard"
    android:layout_width="@dimen/peg_cell_size"
    android:layout_height="@dimen/peg_cell_size"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <ImageView
        android:id="@+id/cellBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cell_bg" />

    <ImageView
        android:id="@+id/cellCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/cell_token" />

</androidx.cardview.widget.CardView>